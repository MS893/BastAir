<%# On passe les tarifs au formulaire via des attributs data pour que JS puisse les utiliser %>
<%= form_with(model: @vol, local: true, id: 'vol-form', data: {
      'tarif-avion1': @tarif&.tarif_horaire_avion1 || 0,
      'tarif-instructeur': @tarif&.tarif_instructeur || 0,
      'user-is-eleve': current_user.eleve?.to_s
    }) do |form| %>

  <% if @vol.errors.any? %>
    <div id="error-explanation" class="alert alert-danger" role="alert">
      <h5 class="alert-heading">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <%= pluralize(@vol.errors.count, "erreur") %> a empêché ce vol d'être sauvegardé :
      </h5>
      <ul>
        <% @vol.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset id="vol-form-fieldset">
    <%# Champ caché pour stocker l'ID du compte BIA sélectionné dans la modale %>
    <%= form.hidden_field :bia_user_id, id: 'vol_bia_user_id' %>

    <div class="card shadow-sm">
      <div class="card-body p-4">

        <h5 class="mb-4">Informations Générales</h5>
        <div class="row">
          <div class="col-md-2 mb-3">
            <%= form.label :avion_id, "Avion" %>
            <%= form.collection_select :avion_id, @avions, :id, :immatriculation, {}, { class: "form-select", id: 'vol_avion_id' } %>
          </div>
          <div class="col-md-3 mb-3">
            <%= form.label :type_vol, "Type"%>
            <%= form.select :type_vol, ["Standard", "Vol découverte", "Vol d'initiation", "Vol d'essai", "Convoyage", "Vol BIA"], {}, { class: "form-select", id: 'vol_type_vol' } %>
            <%# Ce conteneur affichera le nom du collège BIA sélectionné %>
            <div id="bia-school-display" class="form-text text-success small mt-1" style="display: none;"></div>
          </div>
          <div class="col-md-3 mb-3">
            <%= form.label :depart, "Aérodrome départ" %>
            <%= form.text_field :depart, class: "form-control", id: 'vol_depart' %>
          </div>
          <div class="col-md-3 mb-3">
            <%= form.label :arrivee, "Aérodrome arrivée" %>
            <%= form.text_field :arrivee, class: "form-control", id: 'vol_arrivee' %>
          </div>
          <div class="col-md-2 mb-2">
            <%= form.label :nb_atterro, "Atterrissage(s)" %>
            <%= form.number_field :nb_atterro, class: "form-control", step: '1' %>
          </div>
        </div>

        <hr class="my-4">

        <h5 class="mb-4">Horaires et Compteurs</h5>
        <div class="row">
          <div class="col-md-5 mb-3 me-5">
            <%= form.label :debut_vol_date, "Début du vol" %>
            <div class="d-flex gap-2">
              <%= form.date_field :debut_vol_date, value: @vol.debut_vol&.to_date || Date.current, class: "form-control", id: 'vol_debut_vol_date' %>
              <%= select_hour @vol.debut_vol, { start_hour: 6, end_hour: 22 }, { name: 'vol[debut_vol_hour]', class: 'form-select ms-4', id: 'vol_debut_vol_hour' } %>
              <span class="d-flex align-items-center">H</span>
              <%= select_minute @vol.debut_vol, { minute_step: 5 }, { name: 'vol[debut_vol_minute]', class: 'form-select', id: 'vol_debut_vol_minute' } %>
            </div>
          </div>
          <div class="col-md-5 mb-3 ms-5">
            <%= form.label :fin_vol_date, "Fin du vol (calculé avec le temps de vol)" %>
            <div class="d-flex gap-2 align-items-center">
              <%# Ces champs sont désactivés car leur valeur est calculée par JavaScript %>
              <%= date_field_tag 'vol[fin_vol_date]', @vol.fin_vol&.to_date, class: "form-control", readonly: true, id: 'vol_fin_vol_date' %>
              <%= text_field_tag 'vol[fin_vol_hour]', @vol.fin_vol&.hour, class: 'form-control ms-4', readonly: true, id: 'vol_fin_vol_hour' %>
              <span>H</span>
              <%= text_field_tag 'vol[fin_vol_minute]', @vol.fin_vol&.minute, class: 'form-control', readonly: true, id: 'vol_fin_vol_minute' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 mb-3">
            <%= form.label :compteur_depart, "Compteur de départ" %>
            <%= form.number_field :compteur_depart, class: "form-control", step: '0.01', id: 'vol_compteur_depart' %>
          </div>
          <div class="col-md-3 mb-3">
            <%= form.label :compteur_arrivee, "Compteur d'arrivée" %>
            <%= form.number_field :compteur_arrivee, class: "form-control", step: '0.01', id: 'vol_compteur_arrivee' %>
          </div>
          <div class="col-md-3 mb-3">
            <%= form.label :duree_vol, "Durée (centièmes)" %>
            <%= form.number_field :duree_vol, class: "form-control", readonly: true, id: 'vol_duree_vol' %>
          </div>
          <div class="col-md-3 mb-3">
            <%= form.label :duree_vol_mn, "Durée (minutes)" %>
            <%= form.number_field :duree_vol_mn, class: "form-control", readonly: true, id: 'vol_duree_vol_mn' %>
          </div>
        </div>

        <hr class="my-4">

        <h5 class="mb-4">Détails du vol</h5>
        <div class="row">
          <div class="col-md-3 mb-3">
            <%= form.label :fuel_avant_vol, "Carburant avant vol (L)" %>
            <%= form.number_field :fuel_avant_vol, class: "form-control", step: '0.1', id: 'vol_fuel_avant_vol' %>
          </div>
          <div class="col-md-3 mb-3">
            <%= form.label :fuel_apres_vol, "Carburant après vol (L)" %>
            <%= form.number_field :fuel_apres_vol, class: "form-control", step: '0.1', id: 'vol_fuel_apres_vol' %>
          </div>
          <div class="col-md-3 mb-3">
            <%= form.label :huile, "Niveau d'huile (L)" %>
            <%= form.number_field :huile, class: "form-control", step: '0.1', id: 'vol_huile' %>
          </div>
          <div class="col-md-3 mb-3">
            <%= form.label :nature, "Nature du vol" %>
            <%= form.select :nature,
                  options_for_select([["VFR de jour", "VFR de jour"], ["VFR de nuit", "VFR de nuit"], ["IFR", "IFR"]],
                                      (vol.nature.present?) ? vol.nature : "VFR de jour"),
                  {}, { class: "form-select" } %>
          </div>
        </div>

        <%# La section "Instruction" n'est visible que pour les élèves %>
        <% if current_user.eleve? %>
          <hr class="my-4">
          <h5 class="mb-4">Instruction</h5>
          <div class="row align-items-center">
            <div class="col-md-4 mb-3">
            <%= form.label :instructeur_id, "Instructeur" %>
            <%= form.collection_select :instructeur_id, @instructeurs, :id, :name, { prompt: "Sélectionnez un instructeur" }, { class: "form-select", "aria-describedby": "instructeurHelp" } %>
            <div id="instructeurHelp" class="form-text">Instructeur à sélectionner, même en solo.</div>
            </div>
            <div class="col-md-2 mb-3 ms-4">
              <div class="form-check">
                <%= form.check_box :solo, class: "form-check-input", id: 'vol_solo' %> <%= form.label :solo, "Solo", class: "form-check-label" %>
              </div>
            </div>
            <div class="col-md-2 mb-3">
              <div class="form-check">
                <%= form.check_box :supervise, class: "form-check-input" %> <%= form.label :supervise, "Supervisé", class: "form-check-label" %>
              </div>
            </div>
            <div class="col-md-2 mb-3">
              <div class="form-check">
                <%= form.check_box :nav, class: "form-check-input" %> <%= form.label :nav, "Navigation", class: "form-check-label" %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="form-actions mt-5 border-top pt-3 d-flex">
          <button type="button" id="confirm-submission-btn" class="btn btn-success">Enregistrer le vol</button>
          <%= link_to 'Annuler', root_path, class: 'btn btn-outline-primary ms-2 me-3' %>
          <div id="flight-cost-display" class="align-self-center fw-bold text-success" style="font-size: 1.1rem;">
            Coût estimé : 0.00 €
          </div>
          <%# bouton désactivé par défaut et activé si un avion est sélectionné. %>
          <button type="button" id="report-signalement-btn" class="btn btn-outline-danger ms-auto">Signaler une anomalie</button>
        </div>

      </div>
    </div>
  </fieldset>
<% end %>
