<!-- Fenêtre Modale de Création de Signalement -->
<div class="modal fade" id="newSignalementModal" tabindex="-1" aria-labelledby="newSignalementModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newSignalementModalLabel">
          <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
          Signaler une anomalie sur <%= avion.immatriculation %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: [avion, signalement]) do |form| %>
          <div class="mb-3">
            <%= form.label :description, "Veuillez décrire l'anomalie constatée (pièce manquante ou cassée) avec le plus de détails possible :", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 6 %>
          </div>
          <div class="d-flex justify-content-end mt-4">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Annuler</button>
            <%= form.submit "Envoyer le signalement", class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>