<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des Actualités</h1>
    <%= link_to 'Nouvelle Actualité', new_admin_news_item_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Titre</th>
          <th>Contenu</th>
          <th>Créé le</th>
          <th>Auteur</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @news_items.each do |news_item| %>
          <tr>
            <td><%= news_item.title %></td>
            <td><%= truncate(news_item.content, length: 80) %></td>
            <td><%= l(news_item.created_at, format: :short) %></td>
            <td><%= news_item.user.prenom %></td>
            <td class="text-end">
              <%= link_to 'Modifier', edit_admin_news_item_path(news_item), class: 'btn btn-sm btn-secondary' %>
              <%= link_to 'Supprimer', admin_news_item_path(news_item), data: { "turbo-method": :delete, "turbo-confirm": 'Êtes-vous sûr ?' }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>