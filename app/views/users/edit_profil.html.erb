<%# app/views/users/edit_profil.html.erb %>

<div class="row justify-content-center">
  <div class="col-md-6">

      <h2>Modifier mon profil</h2>
      <%# A FAIRE : ajouter d'autres champs (tel, adresse, personne à prévenir) %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :avatar, "Photo de profil", class: "form-label" %><br />
        <%= f.file_field :avatar, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between align-items-center">
        <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
        <%= link_to "Retour à l'accueil", root_path, class: "btn btn-secondary" %>
      </div>

  </div>
</div>