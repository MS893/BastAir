<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Livret de Progression</h1>
    <% if @selected_eleve %>
      <%= link_to download_livret_progression_path(eleve_id: @selected_eleve.id), class: "btn btn-outline-primary" do %>
        <i class="fas fa-file-pdf me-2"></i> Télécharger en PDF
      <% end %>
    <% end %>
  </div>

  <%# --- Sélecteur d'élève pour les instructeurs --- %>
  <% if current_user.instructeur? || current_user.admin? %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Sélectionner un élève</h5>
        <%= form_with(url: livret_progression_path, method: :get, local: true, class: "d-flex align-items-center") do |form| %>
          <div class="flex-grow-1 me-2">
            <%= form.select :eleve_id, options_from_collection_for_select(@eleves, :id, :full_name, params[:eleve_id]), { include_blank: 'Choisissez un élève...' }, { class: 'form-select', onchange: 'this.form.submit()' } %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# --- Affichage du livret de progression --- %>
  <% if @selected_eleve %>                                                                    
    <div class="card">
      <div class="card-header">
        <h4>
          Progression de <%= @selected_eleve.full_name %>
        </h4>
      </div>
      <div class="card-body">
        <% 
          # Calculs pour les barres de progression
          # Théorie : Examens + FTP
          nb_exams_total = @examens_theoriques.count
          nb_exams_valides = @examens_theoriques.select { |l| l.status == 3 && l.date.present? }.count
          
          nb_ftp_total = @formations_theoriques.count
          nb_ftp_valides = @formations_theoriques.select { |l| l.status == 3 && l.date.present? }.count
          
          total_theorie = nb_exams_total + nb_ftp_total
          valides_theorie = nb_exams_valides + nb_ftp_valides
          pct_theorie = total_theorie > 0 ? (valides_theorie.to_f / total_theorie * 100).round : 0

          # Pratique : Leçons en vol
          nb_vol_total = @lecons_en_vol.count
          nb_vol_valides = @lecons_en_vol.select { |l| l.status == 3 && l.date.present? }.count
          pct_pratique = nb_vol_total > 0 ? (nb_vol_valides.to_f / nb_vol_total * 100).round : 0

          # Synthèse des heures
          vols = @selected_eleve.vols
          
          # Si l'élève est breveté (date de fin de formation présente), on fige le livret
          # en ne comptabilisant que les vols effectués jusqu'à cette date.
          if @selected_eleve.date_fin_formation.present?
            vols = vols.where("debut_vol <= ?", @selected_eleve.date_fin_formation.end_of_day)
          end

          h_double_local = vols.where(solo: false, nav: false).sum(:duree_vol)
          h_solo_local   = vols.where(solo: true, nav: false).sum(:duree_vol)
          h_double_nav   = vols.where(solo: false, nav: true).sum(:duree_vol)
          h_solo_nav     = vols.where(solo: true, nav: true).sum(:duree_vol)
          att_double     = vols.where(solo: false).sum(:nb_atterro)
          att_solo       = vols.where(solo: true).sum(:nb_atterro)

          # Totaux
          total_heures = (h_double_local + h_solo_local + h_double_nav + h_solo_nav).round(2)
          total_atterro = att_double + att_solo

          # Helper pour formater les heures en HHhMM
          format_hours = ->(decimal_hours) {
            total_minutes = (decimal_hours.to_f * 60).round
            hours = total_minutes / 60
            minutes = total_minutes % 60
            format("%dh%02d", hours, minutes)
          }

          # Milestones
          lacher_local = vols.where(solo: true, nav: false).exists?
          lacher_nav = vols.where(solo: true, nav: true).exists?
        %>

        <% if @selected_eleve.date_fin_formation.present? %>
          <div class="alert alert-success mb-4">
            <i class="fas fa-graduation-cap me-2"></i>Formation terminée le <%= l(@selected_eleve.date_fin_formation) %>
          </div>
        <% end %>

        <div class="row mb-4">
          <div class="col-md-6">
            <h5 class="small fw-bold text-uppercase text-muted mb-1">Progression Théorique</h5>
            <div class="progress" style="height: 20px;">
              <div class="progress-bar <%= pct_theorie == 100 ? 'bg-success' : 'bg-info' %>" role="progressbar" style="width: <%= pct_theorie %>%;" aria-valuenow="<%= pct_theorie %>" aria-valuemin="0" aria-valuemax="100">
                <%= pct_theorie %>%
              </div>
            </div>
            <small class="text-muted"><%= valides_theorie %> / <%= total_theorie %> éléments validés</small>
          </div>
          <div class="col-md-6">
            <h5 class="small fw-bold text-uppercase text-muted mb-1">Progression Pratique</h5>
            <div class="progress" style="height: 20px;">
              <div class="progress-bar <%= pct_pratique == 100 ? 'bg-success' : 'bg-info' %>" role="progressbar" style="width: <%= pct_pratique %>%;" aria-valuenow="<%= pct_pratique %>" aria-valuemin="0" aria-valuemax="100">
                <%= pct_pratique %>%
              </div>
            </div>
            <small class="text-muted"><%= nb_vol_valides %> / <%= nb_vol_total %> leçons validées</small>
          </div>
        </div>

        <div class="d-flex justify-content-center gap-4 mb-4">
          <div class="d-flex align-items-center">
            <% if lacher_local %>
              <i class="fas fa-check-circle text-success fs-4 me-2"></i>
            <% else %>
              <span class="d-inline-block border border-2 border-secondary rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;"></span>
            <% end %>
            <span class="<%= lacher_local ? 'text-success fw-bold' : 'text-muted' %>">Lâcher Local Solo</span>
          </div>
          <div class="d-flex align-items-center">
            <% if lacher_nav %>
              <i class="fas fa-check-circle text-success fs-4 me-2"></i>
            <% else %>
              <span class="d-inline-block border border-2 border-secondary rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;"></span>
            <% end %>
            <span class="<%= lacher_nav ? 'text-success fw-bold' : 'text-muted' %>">Lâcher Navigation Solo</span>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-body">
            <h6 class="card-title fw-bold mb-3"><i class="fas fa-clock me-2"></i>Synthèse des Heures de Vol</h6>
            <div class="row text-center">
              <div class="col-md-4 border-end">
                <h6 class="text-muted small text-uppercase">Local</h6>
                <div class="d-flex justify-content-around">
                  <div>
                    <span class="d-block fw-bold"><%= format_hours.call(h_double_local) %></span>
                    <small class="text-muted">Double</small>
                  </div>
                  <div>
                    <span class="d-block fw-bold"><%= format_hours.call(h_solo_local) %></span>
                    <small class="text-muted">Solo</small>
                  </div>
                </div>
              </div>
              <div class="col-md-4 border-end">
                <h6 class="text-muted small text-uppercase">Navigation</h6>
                <div class="d-flex justify-content-around">
                  <div>
                    <span class="d-block fw-bold"><%= format_hours.call(h_double_nav) %></span>
                    <small class="text-muted">Double</small>
                  </div>
                  <div>
                    <span class="d-block fw-bold"><%= format_hours.call(h_solo_nav) %></span>
                    <small class="text-muted">Solo</small>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <h6 class="text-muted small text-uppercase">Atterrissages</h6>
                <div class="d-flex justify-content-around">
                  <div>
                    <span class="d-block fw-bold"><%= att_double %></span>
                    <small class="text-muted">Double</small>
                  </div>
                  <div>
                    <span class="d-block fw-bold"><%= att_solo %></span>
                    <small class="text-muted">Solo</small>
                  </div>
                </div>
              </div>
            </div>
            <hr>
            <div class="row text-center">
              <div class="col-md-8 border-end">
                <h6 class="text-muted small text-uppercase">Total Heures</h6>
                <span class="fw-bold fs-5"><%= format_hours.call(total_heures) %></span>
              </div>
              <div class="col-md-4">
                <h6 class="text-muted small text-uppercase">Total Atterrissages</h6>
                <span class="fw-bold fs-5"><%= total_atterro %></span>
              </div>
            </div>
          </div>
        </div>

        <div class="accordion" id="progressionAccordion" data-controller="progression-form">

          <%# --- Accordion: Examens Théoriques --- %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                Examens Théoriques (<%= @examens_theoriques.select { |l| l.status == 3 && l.date.present? }.count %>/<%= @examens_theoriques.count %>)
              </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#progressionAccordion">
              <div class="accordion-body">
                <%= turbo_frame_tag "examens_theoriques_list", "data-turbo-preserve-scroll": "true" do %>
                  <% if @examens_theoriques.present? %>
                    <ul class="list-group">
                      <% @examens_theoriques.each do |livret| %>
                        <%= render 'progressions/examens_theoriques_list', livret: livret %>
                      <% end %>
                    </ul>
                  <% else %>
                    <p class="text-muted">Aucun examen théorique pour le moment.</p>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>

          <%# --- Accordion: Formations Théoriques de Proximité --- %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Formations Théoriques de Proximité (<%= @formations_theoriques.select { |l| l.status == 3 && l.date.present? }.count %>/<%= @formations_theoriques.count %>)
              </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#progressionAccordion">
              <div class="accordion-body">
                <% if @formations_theoriques.present? %>
                  <ul class="list-group">
                    <% @formations_theoriques.each do |livret| %>
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= livret.title %>
                        <%# On vérifie si le cours est validé et si une date est présente %>
                        <% if livret.status == 3 && livret.date.present? %>
                          <%# Si l'utilisateur est instructeur/admin ET qu'une signature existe, on crée un lien %>
                          <% if (current_user.instructeur? || current_user.admin?) && livret.signature_image.attached? %>
                            <%= link_to signature_livret_path(livret), class: "text-decoration-none" do %>
                              <span class="badge bg-success ms-2 fw-normal"><i class="fas fa-check-circle me-1"></i> Validé le <%= l(livret.date, format: :short_year) %></span>
                            <% end %>
                          <% else %>
                            <%# Sinon, on affiche un simple badge non cliquable %>
                            <span class="badge bg-success ms-2 fw-normal"><i class="fas fa-check-circle me-1"></i> Validé le <%= l(livret.date, format: :short_year) %></span>
                          <% end %>
                        <% end %>
                      </li>
                    <% end %>
                  </ul>
                <% else %>
                  <p class="text-muted">Aucune formation théorique pour le moment.</p>
                <% end %>
              </div>
            </div>
          </div>

          <%# --- Accordion: Leçons en Vol --- %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                Leçons en Vol (<%= @lecons_en_vol.select { |l| l.status == 3 && l.date.present? }.count %>/<%= @lecons_en_vol.count %>)
              </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse show" aria-labelledby="headingThree" data-bs-parent="#progressionAccordion">
              <div class="accordion-body">
                <% if @lecons_en_vol.present? %>
                  <div class="table-responsive">
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>Date</th>
                          <th>Titre de la leçon</th>
                          <th>Statut</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @lecons_en_vol.each do |livret| %>
                          <tr>
                            <td><%= livret.date? ? l(livret.date, format: :short_year) : '' %></td>
                            <td><%= livret.flight_lesson.title %></td>
                            <td><%= livret.status %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% else %>
                  <p class="text-muted">Aucune leçon de vol enregistrée pour le moment.</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% elsif current_user.instructeur? %>
    <div class="alert alert-info" role="alert">
      Veuillez sélectionner un élève dans la liste ci-dessus pour afficher son livret de progression.
    </div>
  <% end %>
</div>