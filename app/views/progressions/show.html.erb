<div class="container mt-4">
  <% if @pdf %>
    <div class="p-3 fw-bold border-bottom mb-4" style="background-color: #e9ecef; font-size: 24px;">
      Livret de Progression
    </div>
  <% else %>
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Livret de Progression</h1>
      <% if @selected_eleve %>
        <%= link_to download_livret_progression_path(eleve_id: @selected_eleve.id), class: "btn btn-outline-primary", target: "_blank", data: { turbo: false } do %>
          <i class="bi bi-file-earmark-pdf me-2"></i> Télécharger en PDF
        <% end %>
        <%= link_to send_pdf_email_progression_path(eleve_id: @selected_eleve.id), data: { turbo_method: :post, turbo_confirm: "Envoyer le livret par email à #{@selected_eleve.full_name} ?" }, class: "btn btn-outline-info ms-2" do %>
          <i class="bi bi-envelope me-2"></i> Envoyer par email
        <% end %>
      <% end %>
    </div>
  <% end %>

  <%# --- Sélecteur d'élève pour les instructeurs --- %>
  <% if (current_user.instructeur? || current_user.admin?) && !@pdf %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Sélectionner un élève</h5>
        <%= form_with(url: livret_progression_path, method: :get, local: true, class: "d-flex align-items-center") do |form| %>
          <div class="flex-grow-1 me-2">
            <%= form.select :eleve_id, options_from_collection_for_select(@eleves, :id, :full_name, params[:eleve_id]), { include_blank: 'Choisissez un élève...' }, { class: 'form-select', onchange: 'this.form.submit()' } %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# --- Affichage du livret de progression --- %>
  <% if @selected_eleve %>                                                                    
    <div class="card">
      <div class="card-header">
        <h4>
          Progression de <%= @selected_eleve.full_name %>
        </h4>
      </div>
      <div class="card-body">
        <% 
          # Calculs pour les barres de progression
          # Théorie : Examens + FTP
          nb_exams_total = @examens_theoriques.count
          nb_exams_valides = @examens_theoriques.select { |l| l.status == 3 && l.date.present? }.count
          
          nb_ftp_total = @formations_theoriques.count
          nb_ftp_valides = @formations_theoriques.select { |l| l.status == 3 && l.date.present? }.count
          
          total_theorie = nb_exams_total + nb_ftp_total
          valides_theorie = nb_exams_valides + nb_ftp_valides
          pct_theorie = total_theorie > 0 ? (valides_theorie.to_f / total_theorie * 100).round : 0

          # Pratique : Leçons en vol
          nb_vol_total = @lecons_en_vol.map(&:flight_lesson_id).uniq.count
          nb_vol_valides = @lecons_en_vol.select { |l| l.status > 0 }.map(&:flight_lesson_id).uniq.count
          pct_pratique = nb_vol_total > 0 ? (nb_vol_valides.to_f / nb_vol_total * 100).round : 0

          # Synthèse des heures
          vols = @selected_eleve.vols
          
          # Si l'élève est breveté (date de fin de formation présente), on fige le livret
          # en ne comptabilisant que les vols effectués jusqu'à cette date.
          if @selected_eleve.date_fin_formation.present?
            vols = vols.where("debut_vol <= ?", @selected_eleve.date_fin_formation.end_of_day)
          end

          h_double_local = vols.where(solo: false, nav: false).sum(:duree_vol)
          h_solo_local   = vols.where(solo: true, nav: false).sum(:duree_vol)
          h_double_nav   = vols.where(solo: false, nav: true).sum(:duree_vol)
          h_solo_nav     = vols.where(solo: true, nav: true).sum(:duree_vol)
          att_double     = vols.where(solo: false).sum(:nb_atterro)
          att_solo       = vols.where(solo: true).sum(:nb_atterro)

          # Totaux
          total_heures = (h_double_local + h_solo_local + h_double_nav + h_solo_nav).round(2)
          total_atterro = att_double + att_solo

          # Helper pour formater les heures en HHhMM
          format_hours = ->(decimal_hours) {
            total_minutes = (decimal_hours.to_f * 60).round
            hours = total_minutes / 60
            minutes = total_minutes % 60
            format("%dh%02d", hours, minutes)
          }

          # Milestones
          lacher_local = vols.where(solo: true, nav: false).exists?
          lacher_nav = vols.where(solo: true, nav: true).exists?
        %>

        <% if @selected_eleve.date_fin_formation.present? %>
          <div class="alert alert-success mb-4">
            <i class="bi bi-motarboard me-2"></i>Formation terminée le <%= l(@selected_eleve.date_fin_formation) %>
          </div>
        <% end %>

        <%# --- Section Validation des vols (Visible uniquement par l'instructeur concerné) --- %>
        <% if current_user.instructeur? && @selected_eleve && !@pdf %>
          <%# On récupère les vols de cet élève faits avec l'instructeur connecté, qui ne sont pas encore validés (pas de livret_id) %>
          <% pending_vols = @selected_eleve.vols.where(instructeur_id: current_user.id, livret_id: nil).order(debut_vol: :asc) %>
          
          <% if pending_vols.any? %>
            <% 
              lecons_array = @lecons_en_vol.to_a
              livret_options = lecons_array.uniq(&:title).map do |l|
                has_validated = lecons_array.any? { |item| item.title == l.title && item.status > 0 }
                comment_val = has_validated ? "" : l.comment
                [l.title, l.id, { 'data-comment' => comment_val }]
              end
            %>
            <div class="card mb-4 border-info">
              <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Vols en attente de validation</h5>
                <span class="badge bg-dark"><%= pending_vols.count %></span>
              </div>
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table table-hover align-middle mb-0">
                    <thead class="table-primary small">
                      <tr>
                        <th class="ps-3 py-1">Date</th>
                        <th class="py-1">Durée</th>
                        <th class="py-1">Appareil</th>
                        <th class="py-1">Validation de la leçon</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% pending_vols.each do |vol| %>
                        <tr>
                          <td class="ps-3"><%= l(vol.debut_vol.to_date) %></td>
                          <td><%= number_with_precision(vol.duree_vol, precision: 2) %> h</td>
                          <td><%= vol.avion.immatriculation %></td>
                          <td>
                            <%= form_with(url: vol_path(vol), method: :patch, local: true, class: "row g-2 align-items-center") do |f| %>
                              <div class="col-md-4">
                                <%= f.select :livret_id, options_for_select(livret_options), { prompt: "Choisir la leçon..." }, { class: "form-select form-select-sm", required: true, onchange: "updateLessonDetails(this)" } %>
                              </div>
                              <div class="col-md-2">
                                <%= f.select :status, [['Vu', 1], ['Avancé', 2], ['Acquis', 3]], { selected: 1 }, { class: "form-select form-select-sm", required: true } %>
                              </div>
                              <div class="col-md-5">
                                <%= f.hidden_field :comment, class: "full-comment" %>
                                <input type="hidden" class="base-comment">
                                <input type="text" class="form-control form-control-sm comment-complement" placeholder="Complément..." oninput="updateCommentValue(this)">
                              </div>
                              <div class="col-md-1">
                                <button type="submit" class="btn btn-success btn-sm w-100" disabled>OK</button>
                              </div>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <div class="row mb-4">
          <div class="col-md-6">
            <h5 class="small fw-bold text-uppercase text-muted mb-1">Progression Théorique</h5>
            <div class="progress" style="height: 20px;">
              <div class="progress-bar <%= pct_theorie == 100 ? 'bg-success' : 'bg-info' %>" role="progressbar" style="width: <%= pct_theorie %>%;" aria-valuenow="<%= pct_theorie %>" aria-valuemin="0" aria-valuemax="100">
                <%= pct_theorie %>%
              </div>
            </div>
            <small class="text-muted"><%= valides_theorie %> / <%= total_theorie %> éléments validés</small>
          </div>
          <div class="col-md-6">
            <h5 class="small fw-bold text-uppercase text-muted mb-1">Progression Pratique</h5>
            <div class="progress" style="height: 20px;">
              <div class="progress-bar <%= pct_pratique == 100 ? 'bg-success' : 'bg-info' %>" role="progressbar" style="width: <%= pct_pratique %>%;" aria-valuenow="<%= pct_pratique %>" aria-valuemin="0" aria-valuemax="100">
                <%= pct_pratique %>%
              </div>
            </div>
            <small class="text-muted"><%= nb_vol_valides %> / <%= nb_vol_total %> leçons validées</small>
          </div>
        </div>

        <div class="d-flex justify-content-center gap-4 mb-4">
          <div class="d-flex align-items-center">
            <% if lacher_local %>
              <span class="d-inline-flex align-items-center justify-content-center border border-2 rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;">
                <span class="bg-success rounded-circle" style="width: 1rem; height: 1rem;"></span>
              </span>
            <% else %>
              <span class="d-inline-block border border-2 rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;"></span>
            <% end %>
            <span class="<%= lacher_local ? 'text-success fw-bold' : 'text-muted' %>">Lâcher Local Solo</span>
          </div>
          <div class="d-flex align-items-center">
            <% if lacher_nav %>
              <span class="d-inline-flex align-items-center justify-content-center border border-2 rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;">
                <span class="bg-success rounded-circle" style="width: 1rem; height: 1rem;"></span>
              </span>
            <% else %>
              <span class="d-inline-block border border-2 rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;"></span>
            <% end %>
            <span class="<%= lacher_nav ? 'text-success fw-bold' : 'text-muted' %>">Lâcher Navigation Solo</span>
          </div>
          <div class="d-flex align-items-center">
            <% 
              examen_effectue = @selected_eleve.date_fin_formation.present?
              can_edit_examen = (current_user.instructeur? || current_user.admin?) && !@pdf
            %>
            <% if can_edit_examen %>
              <% if examen_effectue %>
                <div class="d-flex align-items-center">
                  <%= link_to update_exam_progression_path(eleve_id: @selected_eleve.id, user: { date_fin_formation: '' }), data: { turbo_method: :patch, turbo_confirm: "Êtes-vous sûr de vouloir annuler l'examen pratique ?" }, class: "btn btn-link p-0 text-decoration-none d-flex align-items-center text-reset border-0 bg-transparent me-2" do %>
                    <span class="d-inline-flex align-items-center justify-content-center border border-2 rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;">
                      <span class="bg-success rounded-circle" style="width: 1rem; height: 1rem;"></span>
                    </span>
                    <span class="text-success fw-bold">Examen pratique effectué</span>
                  <% end %>
                  <%= form_with(model: @selected_eleve, url: update_exam_progression_path(eleve_id: @selected_eleve.id), method: :patch) do |f| %>
                    <%= f.date_field :date_fin_formation, class: "form-control form-control-sm", style: "width: auto;", onchange: "this.form.requestSubmit()" %>
                  <% end %>
                  <%# On vérifie si l'email a déjà été envoyé via les logs d'activité %>
                  <% email_sent = ActivityLog.where(record_type: 'User', record_id: @selected_eleve.id, action: 'send_exam_email').exists? %>
                  <% if email_sent %>
                    <span class="ms-2 text-success" title="Email de félicitations déjà envoyé"><i class="bi bi-check-circle"></i></span>
                  <% else %>
                    <%= button_to send_exam_email_progression_path(eleve_id: @selected_eleve.id), method: :post, form_class: "d-inline ms-2", class: "btn btn-link text-primary p-0 border-0 bg-transparent", title: "Envoyer un email à l'élève", data: { turbo_confirm: "Confirmez-vous l'envoi de l'email de félicitations à l'élève ?" } do %>
                      <i class="bi bi-envelope"></i>
                    <% end %>
                  <% end %>
                </div>
              <% else %>
                <% if pct_theorie == 100 && pct_pratique == 100 %>
                  <%= form_with(model: @selected_eleve, url: update_exam_progression_path(eleve_id: @selected_eleve.id), method: :patch, class: "d-flex align-items-center") do |f| %>
                    <button type="submit" class="btn btn-link p-0 text-decoration-none d-flex align-items-center text-reset border-0 bg-transparent me-2" data-turbo-confirm="Êtes-vous sûr de vouloir valider l'examen pratique ?">
                      <span class="d-inline-block border border-2 rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;"></span>
                      <span class="text-muted">Examen pratique effectué</span>
                    </button>
                    <%= f.hidden_field :date_fin_formation, value: Date.today %>
                  <% end %>
                <% else %>
                  <button type="button" class="btn btn-link p-0 text-decoration-none d-flex align-items-center text-reset border-0 bg-transparent me-2" onclick="alert('Impossible de valider : la progression théorique et pratique doit être à 100%.')">
                    <span class="d-inline-block border border-2 rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;"></span>
                    <span class="text-muted">Examen pratique effectué</span>
                  </button>
                <% end %>
              <% end %>
            <% else %>
              <% if examen_effectue %>
                <span class="d-inline-flex align-items-center justify-content-center border border-2 rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;">
                  <span class="bg-success rounded-circle" style="width: 1rem; height: 1rem;"></span>
                </span>
              <% else %>
                <span class="d-inline-block border border-2 rounded-circle me-2" style="width: 1.5rem; height: 1.5rem;"></span>
              <% end %>
              <span class="<%= examen_effectue ? 'text-success fw-bold' : 'text-muted' %>">Examen pratique effectué<%= examen_effectue ? " (#{l(@selected_eleve.date_fin_formation)})" : "" %></span>
            <% end %>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-body">
            <h6 class="card-title fw-bold mb-3"><i class="bi bi-clock me-2"></i>Synthèse des Heures de Vol</h6>
            <div class="row text-center">
              <div class="col-md-4 border-end">
                <h6 class="text-muted small text-uppercase">Local</h6>
                <div class="d-flex justify-content-around">
                  <div>
                    <span class="d-block fw-bold"><%= format_hours.call(h_double_local) %></span>
                    <small class="text-muted">Double</small>
                  </div>
                  <div>
                    <span class="d-block fw-bold"><%= format_hours.call(h_solo_local) %></span>
                    <small class="text-muted">Solo</small>
                  </div>
                </div>
              </div>
              <div class="col-md-4 border-end">
                <h6 class="text-muted small text-uppercase">Navigation</h6>
                <div class="d-flex justify-content-around">
                  <div>
                    <span class="d-block fw-bold"><%= format_hours.call(h_double_nav) %></span>
                    <small class="text-muted">Double</small>
                  </div>
                  <div>
                    <span class="d-block fw-bold"><%= format_hours.call(h_solo_nav) %></span>
                    <small class="text-muted">Solo</small>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <h6 class="text-muted small text-uppercase">Atterrissages</h6>
                <div class="d-flex justify-content-around">
                  <div>
                    <span class="d-block fw-bold"><%= att_double %></span>
                    <small class="text-muted">Double</small>
                  </div>
                  <div>
                    <span class="d-block fw-bold"><%= att_solo %></span>
                    <small class="text-muted">Solo</small>
                  </div>
                </div>
              </div>
            </div>
            <hr>
            <div class="row text-center">
              <div class="col-md-8 border-end">
                <h6 class="text-muted small text-uppercase">Total Heures</h6>
                <span class="fw-bold fs-5"><%= format_hours.call(total_heures) %></span>
              </div>
              <div class="col-md-4">
                <h6 class="text-muted small text-uppercase">Total Atterrissages</h6>
                <span class="fw-bold fs-5"><%= total_atterro %></span>
              </div>
            </div>
          </div>
        </div>

        <div class="accordion" id="progressionAccordion" data-controller="progression-form">

          <%# --- Accordion: Examens Théoriques --- %>
          <div class="accordion-item" style="<%= @pdf ? 'page-break-before: always;' : '' %>">
            <h2 class="accordion-header" id="headingOne">
              <% if @pdf %>
                <div class="p-3 fw-bold border-bottom" style="background-color: #e9ecef;">
                  Examens Théoriques (<%= @examens_theoriques.select { |l| l.status == 3 && l.date.present? }.count %>/<%= @examens_theoriques.count %>)
                </div>
              <% else %>
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                  Examens Théoriques (<%= @examens_theoriques.select { |l| l.status == 3 && l.date.present? }.count %>/<%= @examens_theoriques.count %>)
                </button>
              <% end %>
            </h2>
            <div id="collapseOne" class="accordion-collapse <%= @pdf ? '' : 'collapse' %>" aria-labelledby="headingOne" data-bs-parent="#progressionAccordion">
              <div class="accordion-body">
                <%= turbo_frame_tag "examens_theoriques_list", "data-turbo-preserve-scroll": "true" do %>
                  <% if @examens_theoriques.present? %>
                    <ul class="list-group">
                      <% @examens_theoriques.each do |livret| %>
                        <% if @pdf %>
                          <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                              <%= livret.title %>
                              <div class="mt-1 d-flex">
                                <% if livret.signature_image.attached? %>
                                  <div class="me-2">
                                    <% 
                                      if livret.signature_image.service.is_a?(ActiveStorage::Service::DiskService)
                                        img_path = livret.signature_image.service.path_for(livret.signature_image.key)
                                        img_data = Base64.encode64(File.read(img_path))
                                        img_src = "data:#{livret.signature_image.content_type};base64,#{img_data}"
                                      else
                                        img_src = url_for(livret.signature_image)
                                      end
                                    %>
                                    <%= image_tag img_src, style: "height: 25px; width: auto; display: block;" %>
                                  </div>
                                <% end %>
                                <% if livret.instructor_signature.attached? %>
                                  <div>
                                    <% 
                                      if livret.instructor_signature.service.is_a?(ActiveStorage::Service::DiskService)
                                        img_path = livret.instructor_signature.service.path_for(livret.instructor_signature.key)
                                        img_data = Base64.encode64(File.read(img_path))
                                        img_src = "data:#{livret.instructor_signature.content_type};base64,#{img_data}"
                                      else
                                        img_src = url_for(livret.instructor_signature)
                                      end
                                    %>
                                    <%= image_tag img_src, style: "height: 25px; width: auto; display: block;" %>
                                  </div>
                                <% end %>
                              </div>
                            </div>
                            <% if livret.status == 3 && livret.date.present? %>
                              <span class="badge bg-success ms-2 fw-normal"><i class="bi bi-check-circle me-1"></i> - Validé le <%= l(livret.date, format: :short_year) %></span>
                            <% else %>
                              <span class="badge bg-light text-dark border"> - Non validé</span>
                            <% end %>
                          </li>
                        <% else %>
                          <%= render 'progressions/examens_theoriques_list', livret: livret %>
                        <% end %>
                      <% end %>
                    </ul>
                  <% else %>
                    <p class="text-muted">Aucun examen théorique pour le moment.</p>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>

          <%# --- Accordion: Formations Théoriques de Proximité --- %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
              <% if @pdf %>
                <div class="p-3 fw-bold border-bottom" style="background-color: #e9ecef; margin-top: 50px;">
                  Formations Théoriques de Proximité (<%= @formations_theoriques.select { |l| l.status == 3 && l.date.present? }.count %>/<%= @formations_theoriques.count %>)
                </div>
              <% else %>
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                  Formations Théoriques de Proximité (<%= @formations_theoriques.select { |l| l.status == 3 && l.date.present? }.count %>/<%= @formations_theoriques.count %>)
                </button>
              <% end %>
            </h2>
            <div id="collapseTwo" class="accordion-collapse <%= @pdf ? '' : 'collapse' %>" aria-labelledby="headingTwo" data-bs-parent="#progressionAccordion">
              <div class="accordion-body">
                <% if @formations_theoriques.present? %>
                  <ul class="list-group">
                    <% @formations_theoriques.each do |livret| %>
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                          <%= livret.title %>
                          <% if @pdf %>
                            <div class="mt-1 d-flex">
                              <% if livret.signature_image.attached? %>
                                <div class="me-2">
                                  <% 
                                    if livret.signature_image.service.is_a?(ActiveStorage::Service::DiskService)
                                      img_path = livret.signature_image.service.path_for(livret.signature_image.key)
                                      img_data = Base64.encode64(File.read(img_path))
                                      img_src = "data:#{livret.signature_image.content_type};base64,#{img_data}"
                                    else
                                      img_src = url_for(livret.signature_image)
                                    end
                                  %>
                                  <%= image_tag img_src, style: "height: 25px; width: auto; display: block;" %>
                                </div>
                              <% end %>
                              <% if livret.instructor_signature.attached? %>
                                <div>
                                  <% 
                                    if livret.instructor_signature.service.is_a?(ActiveStorage::Service::DiskService)
                                      img_path = livret.instructor_signature.service.path_for(livret.instructor_signature.key)
                                      img_data = Base64.encode64(File.read(img_path))
                                      img_src = "data:#{livret.instructor_signature.content_type};base64,#{img_data}"
                                    else
                                      img_src = url_for(livret.instructor_signature)
                                    end
                                  %>
                                  <%= image_tag img_src, style: "height: 25px; width: auto; display: block;" %>
                                </div>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                        <%# On vérifie si le cours est validé et si une date est présente %>
                        <% if livret.status == 3 && livret.date.present? %>
                          <%# Si l'utilisateur est autorisé (instructeur/admin ou l'élève lui-même) ET qu'une signature existe, on crée un lien %>
                          <% if (current_user.instructeur? || current_user.admin? || current_user == livret.user) && livret.signature_image.attached? && !@pdf %>
                            <%= link_to signature_livret_path(livret), class: "text-decoration-none" do %>
                              <span class="badge bg-success ms-2 fw-normal"><i class="bi bi-check-circle me-1"></i> Validé le <%= l(livret.date, format: :short_year) %></span>
                            <% end %>
                          <% else %>
                            <%# Sinon, on affiche un simple badge non cliquable %>
                            <span class="badge bg-success ms-2 fw-normal"><i class="bi bi-check-circle me-1"></i> Validé le <%= l(livret.date, format: :short_year) %></span>
                          <% end %>
                        <% else %>
                          <span class="badge bg-light text-dark border">Non validé</span>
                        <% end %>
                      </li>
                    <% end %>
                  </ul>
                <% else %>
                  <p class="text-muted">Aucune formation théorique pour le moment.</p>
                <% end %>
              </div>
            </div>
          </div>

          <%# --- Accordion: Leçons en Vol --- %>
          <div class="accordion-item" style="<%= @pdf ? 'page-break-before: always;' : '' %>">
            <h2 class="accordion-header" id="headingThree">
              <% if @pdf %>
                <div class="p-3 fw-bold border-bottom" style="background-color: #e9ecef;">
                  Leçons en Vol (<%= nb_vol_valides %>/<%= nb_vol_total %>)
                </div>
              <% else %>
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                  Leçons en Vol (<%= nb_vol_valides %>/<%= nb_vol_total %>)
                </button>
              <% end %>
            </h2>
            <div id="collapseThree" class="accordion-collapse <%= @pdf ? '' : 'collapse show' %>" aria-labelledby="headingThree" data-bs-parent="#progressionAccordion">
              <div class="accordion-body">
                <% if @lecons_en_vol.present? %>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th style="width: 12%">Date</th>
                          <th style="width: 37%">Titre de la leçon</th>
                          <th style="width: 4%">Statut</th>
                          <th style="width: 47%">Commentaires</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% 
                          # On regroupe par flight_lesson_id (ou titre) pour gérer l'affichage (remplacer le placeholder par la leçon validée)
                          grouped_lecons = @lecons_en_vol.group_by { |l| l.flight_lesson_id || l.title }
                          row_class = ""
                        %>
                        <% grouped_lecons.each do |key, livrets| %>
                          <% 
                            # Si une leçon est validée (status > 0), on masque celle qui est vide (status 0)
                            has_validated = livrets.any? { |l| l.status > 0 }
                            to_display = has_validated ? livrets.select { |l| l.status > 0 } : livrets
                            row_class = (row_class == "table-active" ? "" : "table-active")
                          %>
                          <% to_display.each_with_index do |livret, index| %>
                            <% 
                              show_title = (index == 0)
                              vol = Vol.where(livret_id: livret.id).order(debut_vol: :desc).first 
                            %>
                          <tr class="<%= row_class %>">
                            <td>
                              <% 
                                student_signed = livret.signature_image.attached?
                                instructor_signed = livret.instructor_signature.attached?
                                
                                date_class = ""
                                if student_signed && instructor_signed
                                  date_class = "text-decoration-none text-success fw-bold" # Vert : Signé par les deux
                                elsif instructor_signed
                                  date_class = "text-decoration-none text-warning fw-bold" # jaune : Signé par l'instructeur uniquement
                                end

                                # On permet l'accès à la page de signature pour voir ou signer
                                can_access_signature = (current_user == livret.user) || (current_user.instructeur? || current_user.admin?)
                              %>
                              
                              <% date_content = capture do %>
                                <% if livret.date? %>
                                  <i class="bi bi-calendar-check me-1"></i><%= l(livret.date, format: :short_year) %>
                                <% elsif vol %>
                                  <i class="bi bi-calendar-check me-1"></i><%= l(vol.debut_vol.to_date, format: :short_year) %>
                                <% end %>
                              <% end %>

                              <% if date_content.to_s.strip.present? %>
                                <% if can_access_signature && !@pdf %>
                                  <%= link_to date_content, signature_livret_path(livret), class: "#{date_class}", title: "Voir ou signer la leçon" %>
                                <% else %>
                                  <span class="<%= date_class %>"><%= date_content %></span>
                                <% end %>
                              <% end %>

                              <% if @pdf %>
                                <div class="mt-1">
                                  <% if livret.signature_image.attached? %>
                                    <div class="mb-1">
                                      <% 
                                        if livret.signature_image.service.is_a?(ActiveStorage::Service::DiskService)
                                          img_path = livret.signature_image.service.path_for(livret.signature_image.key)
                                          img_data = Base64.encode64(File.read(img_path))
                                          img_src = "data:#{livret.signature_image.content_type};base64,#{img_data}"
                                        else
                                          img_src = url_for(livret.signature_image)
                                        end
                                      %>
                                      <%= image_tag img_src, style: "height: 25px; width: auto; display: block;" %>
                                    </div>
                                  <% end %>
                                  <% if livret.instructor_signature.attached? %>
                                    <div class="d-flex align-items-center">
                                      <% 
                                        if livret.instructor_signature.service.is_a?(ActiveStorage::Service::DiskService)
                                          img_path = livret.instructor_signature.service.path_for(livret.instructor_signature.key)
                                          img_data = Base64.encode64(File.read(img_path))
                                          img_src = "data:#{livret.instructor_signature.content_type};base64,#{img_data}"
                                        else
                                          img_src = url_for(livret.instructor_signature)
                                        end
                                      %>
                                      <%= image_tag img_src, style: "height: 25px; width: auto; display: block;" %>
                                      <% if vol&.instructeur %>
                                        <span class="ms-1" style="font-size: 9px;"><%= vol.instructeur.full_name %></span>
                                      <% end %>
                                    </div>
                                  <% end %>
                                </div>
                              <% end %>

                              <% if vol %>
                                <div class="small text-center text-muted">
                                  <%= vol.debut_vol.strftime("%H:%M") %> - <%= vol.fin_vol.strftime("%H:%M") %>
                                </div>
                              <% end %>
                            </td>
                            <td><%= show_title ? livret.display_title : "" %></td>
                            <td class="text-center">
                              <% if (current_user.instructeur? || current_user.admin?) && !@pdf %>
                                <div class="dropdown">
                                  <button class="btn btn-link text-decoration-none p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <% case livret.status %>
                                    <% when 1 %>
                                      <span class="badge bg-secondary">Vu <i class="bi bi-chevron-down ms-1" style="font-size: 0.7em;"></i></span>
                                    <% when 2 %>
                                      <span class="badge bg-primary">Avancé <i class="bi bi-chevron-down ms-1" style="font-size: 0.7em;"></i></span>
                                    <% when 3 %>
                                      <span class="badge bg-success">Acquis <i class="bi bi-chevron-down ms-1" style="font-size: 0.7em;"></i></span>
                                    <% end %>
                                  </button>
                                  <ul class="dropdown-menu">
                                    <li><%= button_to "Vu", livret_path(livret), method: :patch, params: { livret: { status: 1 } }, class: "dropdown-item" %></li>
                                    <li><%= button_to "Avancé", livret_path(livret), method: :patch, params: { livret: { status: 2 } }, class: "dropdown-item" %></li>
                                    <li><%= button_to "Acquis", livret_path(livret), method: :patch, params: { livret: { status: 3 } }, class: "dropdown-item" %></li>
                                  </ul>
                                </div>
                              <% else %>
                                <% case livret.status %>
                                <% when 1 %>
                                  <span class="badge bg-secondary">Vu</span>
                                <% when 2 %>
                                  <span class="badge bg-primary">Avancé</span>
                                <% when 3 %>
                                  <span class="badge bg-success">Acquis</span>
                                <% end %>
                              <% end %>
                              <% if vol %>
                                <div class="small text-muted text-center mt-2">
                                  <%= number_with_precision(vol.duree_vol, precision: 2) %> h
                                </div>
                              <% end %>
                            </td>
                            <td><%= sanitize(livret.comment.to_s).gsub("Commentaires :", "<br>Commentaires :").html_safe %></td>
                          </tr>
                        <% end %>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% else %>
                  <p class="text-muted">Aucune leçon de vol enregistrée pour le moment.</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% elsif current_user.instructeur? %>
    <div class="alert alert-info" role="alert">
      Veuillez sélectionner un élève dans la liste ci-dessus pour afficher son livret de progression.
    </div>
  <% end %>
</div>

<script>

  function updateLessonDetails(select) {
    const selectedOption = select.options[select.selectedIndex];
    const comment = selectedOption.getAttribute('data-comment');
    const form = select.form;
    const baseCommentField = form.querySelector('.base-comment');
    const fullCommentField = form.querySelector('.full-comment');
    const complementField = form.querySelector('.comment-complement');
    const submitButton = form.querySelector('button[type="submit"]');

    if (baseCommentField) {
      baseCommentField.value = comment || "";
      if (fullCommentField) fullCommentField.value = comment || "";
      if (complementField) complementField.value = "";
    }
    if (submitButton) {
      submitButton.disabled = !select.value;
    }
  }

  function updateCommentValue(input) {
    const form = input.form;
    const baseComment = form.querySelector('.base-comment').value;
    const fullCommentField = form.querySelector('.full-comment');
    
    if (fullCommentField) {
      if (baseComment && input.value) {
        fullCommentField.value = baseComment + " Commentaires : " + input.value;
      } else if (input.value) {
        fullCommentField.value = "Commentaires : " + input.value;
      } else {
        fullCommentField.value = baseComment || "";
      }
    }
  }

  document.addEventListener("turbo:load", function() {
    const accordions = document.querySelectorAll('.accordion-collapse');
    
    accordions.forEach(acc => {
      let isDirty = false;
      
      acc.addEventListener('change', () => {
        isDirty = true;
      });
      
      acc.addEventListener('hidden.bs.collapse', () => {
        if (isDirty) {
          Turbo.visit(window.location.href, { action: "replace" });
        }
      });
    });
  });

</script>
