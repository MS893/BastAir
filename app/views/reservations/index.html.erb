<% content_for :title, "Mes Réservations" %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Mes Réservations</h1>
        <%= link_to "Retour au tableau de bord", root_path, class: "btn btn-secondary" %>
      </div>

      <!-- Système d'onglets -->
      <ul class="nav nav-tabs" id="reservationsTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab" aria-controls="upcoming" aria-selected="true">À venir</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="past-tab" data-bs-toggle="tab" data-bs-target="#past" type="button" role="tab" aria-controls="past" aria-selected="false">Passées</button>
        </li>
      </ul>

      <div class="tab-content" id="reservationsTabContent">
        <!-- Onglet Réservations à venir -->
        <div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
          <div class="card shadow-sm card-tab">
            <div class="card-body">
              <% if @upcoming_reservations.any? %>
                <ul class="list-group list-group-flush">
                  <% @upcoming_reservations.each do |reservation| %>
                    <li class="list-group-item px-0">
                      <div class="d-flex justify-content-between align-items-center">
                        <div>
                          <p class="mb-1 fw-bold">Vol sur <%= reservation.avion.immatriculation %></p>
                          <p class="text-muted small mb-0"><%= l(reservation.start_time, format: :long) %></p>
                          <% if reservation.instruction? && reservation.fi.present? %>
                            <p class="text-info small mb-0">Vol en instruction avec <%= reservation.fi %></p>
                          <% end %>
                        </div>
                        <div class="d-flex">
                          <% time_before_flight = reservation.start_time - Time.current %>
                          <%= link_to "Modifier", edit_reservation_path(reservation), class: "btn btn-sm btn-outline-primary" %>
                          <%= button_tag "Annuler", type: 'button', class: 'btn btn-sm btn-outline-danger ms-2',
                                'data-bs-toggle': 'modal', 'data-bs-target': '#cancellationModal',
                                'data-reservation-id': reservation.id, 'data-time-before-flight': time_before_flight %>
                        </div>
                      </div>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-center text-muted my-4">Vous n'avez aucune réservation à venir.</p>
              <% end %>
            </div>
            <% if @upcoming_reservations.any? %>
              <div class="card-footer bg-light d-flex justify-content-center">
                <%= paginate @upcoming_reservations, param_name: :upcoming_page %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Onglet Réservations passées -->
        <div class="tab-pane fade" id="past" role="tabpanel" aria-labelledby="past-tab">
          <div class="card shadow-sm card-tab">
            <div class="card-body">
              <% if @past_reservations.any? %>
                <ul class="list-group list-group-flush">
                  <% @past_reservations.each do |reservation| %>
                    <li class="list-group-item px-0">
                      <p class="mb-1 fw-bold">Vol sur <%= reservation.avion.immatriculation %></p>
                      <p class="text-muted small mb-0"><%= l(reservation.start_time, format: :long) %></p>
                      <% if reservation.instruction? && reservation.fi.present? %>
                        <p class="text-info small mb-0">Vol en instruction avec <%= reservation.fi %></p>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-center text-muted my-4">Vous n'avez aucune réservation passée.</p>
              <% end %>
            </div>
            <% if @past_reservations.any? %>
              <div class="card-footer bg-light d-flex justify-content-center">
                <%= paginate @past_reservations, param_name: :past_page %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <style>
        .card-tab {
          border-top-left-radius: 0;
        }
      </style>

    </div>
  </div>
</div>
