<!-- Dernières consignes -->
<!-- app/views/static_pages/_dernieres_consignes.html.erb -->

<div class="card h-100">
  <div class="card-header">
    <h5 class="card-title mb-0">
      <i class="fas fa-newspaper me-2"></i> Dernières consignes
    </h5>
  </div>
  <div class="card-body">
    <% if @news_items.any? %>
      <% @news_items.each do |news| %>
        <div class="mb-3">
          <h6 class="card-subtitle mb-1 text-muted"><%= news.title %> -
            <small>Publié le <%= l(news.created_at, format: :short) %> par <%= news.user.prenom %></small></h6>
          <p class="card-text small"><%= news.content %></p>
        </div>
      <% end %>
    <% else %>
      <p class="card-text">Aucune consigne pour le moment.</p>
    <% end %>
  </div>
</div>
