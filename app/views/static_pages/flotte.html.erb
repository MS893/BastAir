<% content_for :title, t('static_pages.fleet.title') %>

<div class="container my-5">
  <div class="text-center">
    <h1 class="mb-4"><%= t('static_pages.fleet.title') %></h1>
    <p class="lead">
      <%= t('static_pages.fleet.lead') %>
    </p>
  </div>
  <hr class="my-5">

  <div class="row justify-content-center mb-5">
    <!-- Avion 1 -->
    <div class="col-md-8 col-lg-6 mb-4">
      <div class="card h-100">
        <%= image_tag 'Elixir.jpg', class: 'card-img-top', alt: 'Elixir' %>
        <div class="card-body">
          <h5 class="card-title"><%= t('static_pages.fleet.elixir.title') %></h5>
          <p class="card-text">
            <%= t('static_pages.fleet.elixir.description') %>
          </p>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
          <small class="text-muted"><%= t('static_pages.fleet.elixir.footer') %></small>
          <%= link_to t('static_pages.fleet.elixir.website'), "https://elixir-aircraft.com/", class: "btn btn-sm btn-outline-primary", target: "_blank", rel: "noopener" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Colonne 1: Polyvalence -->
    <div class="col-md-6 col-lg-3 mb-4">
      <div class="border rounded p-3 h-100">
        <h4><%= t('static_pages.fleet.features.versatility.title') %></h4>
        <p>
          <%= t('static_pages.fleet.features.versatility.text') %>
        </p>
      </div>
    </div>

    <!-- Colonne 2: Sécurité -->
    <div class="col-md-6 col-lg-3 mb-4">
      <div class="border rounded p-3 h-100">
        <h4><%= t('static_pages.fleet.features.safety.title') %></h4>
        <p>
          <%= t('static_pages.fleet.features.safety.text') %>
        </p>
      </div>
    </div>

    <!-- Colonne 3: Économies -->
    <div class="col-md-6 col-lg-3 mb-4">
      <div class="border rounded p-3 h-100">
        <h4><%= t('static_pages.fleet.features.economy.title') %></h4>
        <p>
          <%= t('static_pages.fleet.features.economy.text') %>
        </p>
      </div>
    </div>

    <!-- Colonne 4: Plus écologique -->
    <div class="col-md-6 col-lg-3 mb-4">
      <div class="border rounded p-3 h-100">
        <h4><%= t('static_pages.fleet.features.ecology.title') %></h4>
        <p>
          <%= t('static_pages.fleet.features.ecology.text') %>
        </p>
      </div>
    </div>
  </div>

  <hr class="my-5">

  <!-- Section Vidéo -->
  <div class="row mb-5">
    <div class="col-lg-10 mx-auto">
      <h2 class="text-center mb-4"><%= t('static_pages.fleet.video_title') %></h2>
      <div class="ratio ratio-16x9 rounded overflow-hidden shadow">
        <iframe src="https://www.youtube.com/embed/cfKqM9kkRXM" title="Vidéo de présentation de l'Elixir" allowfullscreen="" loading="lazy"></iframe>
      </div>
    </div>
  </div>

  <hr class="my-5">

  <!-- Section Photos -->
  <h2 class="text-center mb-4"><%= t('static_pages.fleet.gallery_title') %></h2>
  <div class="row justify-content-center">

    <!-- Photo 1 -->
    <div class="col-md-6 col-lg-5 mb-4">
      <div class="card h-100">
        <%= image_tag 'elixir.webp', class: 'card-img-top', alt: 'Elixir en vol' %>
      </div>
    </div>

    <!-- Photo 2 -->
    <div class="col-md-6 col-lg-5 mb-4">
      <div class="card h-100">
        <%= image_tag 'elixir2.webp', class: 'card-img-top', alt: 'Cockpit de l\'Elixir' %>
      </div>
    </div>
  </div>
</div>
