<!-- app/views/static_pages/_disponibilites_instructeurs.html.erb -->

<div class="card">
  <div class="card-header bg-info text-white">
    <h5 class="card-title mb-0">
      <i class="bi bi-calendar-event me-2"></i>
      Disponibilités / Indisponibilités Ponctuelles des Instructeurs
    </h5>
  </div>
  <div class="card-body">
    <% dispo_news_items = NewsItem.where(title: 'dispo') %>
    <% if dispo_news_items.present? %>
      <ul>
        <% dispo_news_items.each do |news_item| %>
          <li><%= news_item.content %></li>
        <% end %>
      </ul>
    <% else %>
      <p>Aucune disponibilité/indisponibilité ponctuelle à signaler.</p>
    <% end %>
  </div>
</div>
