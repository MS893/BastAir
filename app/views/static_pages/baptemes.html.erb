<% content_for :title, t('static_pages.baptemes.title') %>

<div class="container my-5">

  <div class="text-center">
    <h1 class="mb-4"><%= t('static_pages.baptemes.title') %></h1>
    <p class="lead"><%= t('static_pages.baptemes.lead') %></p>
  </div>

  <hr class="my-5">

  <div class="row">

    <!-- Circuit 1: Volcan -->
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        <%= image_tag 'Volcan1.webp', class: 'card-img-top', alt: 'Survol du volcan de la Soufrière' %>
        <div class="card-body">
          <h5 class="card-title"><%= t('static_pages.baptemes.volcano.title') %></h5>
          <p class="card-text"><%= t('static_pages.baptemes.volcano.text') %></p>
        </div>
      </div>
    </div>

    <!-- Circuit 2: Les Saintes -->
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        <%= image_tag 'LesSaintes1.webp', class: 'card-img-top', alt: 'Survol du volcan de la Soufrière' %>
        <div class="card-body">
          <h5 class="card-title"><%= t('static_pages.baptemes.coast.title') %></h5>
          <p class="card-text"><%= t('static_pages.baptemes.coast.text') %></p>
        </div>
      </div>
    </div>

  <!-- Card : Tarifs Baptêmes -->
  <div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100 text-center">
      <div class="card-header">
        <h4 class="my-0 fw-normal"><%= t('static_pages.baptemes.pricing_card.title') %></h4>
      </div>
      <div class="card-body d-flex flex-column">
        <h1 class="card-title pricing-card-title"><%= t('static_pages.baptemes.pricing_card.price') %></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li><%= t('static_pages.baptemes.pricing_card.item1') %></li>
          <li><%= t('static_pages.baptemes.pricing_card.item2') %></li>
        </ul>
        <%= link_to t('static_pages.baptemes.pricing_card.button'), '#', class: "w-100 btn btn-lg btn-outline-primary mt-auto" %>
      </div>
    </div>
  </div>

  </div>

  <hr class="my-5">

  <!-- Section Formulaire de Contact -->
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <h2 class="text-center mb-4"><%= t('static_pages.baptemes.contact.title') %></h2>
      <p class="text-center mb-4"><%= t('static_pages.baptemes.contact.text') %></p>
      
      <%= form_with url: contact_path, method: :post, local: true do |form| %>
        <div class="row">
          <div class="col-md-6 mb-3">
            <%= form.label :prenom, t('static_pages.baptemes.contact.form.first_name'), class: 'form-label' %>
            <%= form.text_field :prenom, class: 'form-control', required: true, value: @prenom %>
          </div>
          <div class="col-md-6 mb-3">
            <%= form.label :nom, t('static_pages.baptemes.contact.form.last_name'), class: 'form-label' %>
            <%= form.text_field :nom, class: 'form-control', required: true, value: @nom %>
          </div>
        </div>
        <div class="mb-3">
          <%= form.label :email, t('static_pages.baptemes.contact.form.email'), class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', required: true, value: @email %>
        </div>
        <div class="mb-3">
          <%= form.label :message, t('static_pages.baptemes.contact.form.message'), class: 'form-label' %>
          <%= form.text_area :message, class: 'form-control', rows: 5, required: true, value: @message %>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <%= recaptcha_tags %>
        </div>
        <div class="text-center">
          <%= form.submit t('static_pages.baptemes.contact.form.submit'), class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>

</div>