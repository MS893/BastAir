<% content_for :title, "Agenda Instructeurs" %>

<div class="container my-5">
  <h1 class="text-center mb-4">Agenda des instructeurs</h1>
  <p class="lead text-center mb-5">
    Consultez ici les disponibilités des instructeurs pour planifier vos leçons.
  </p>

  <% if @instructor_status && @instructor_status[:is_instructor] %>
    <div class="text-center mb-4">
      <%= link_to "Gérer mes disponibilités", edit_instructor_availabilities_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="table-responsive" >
    <table class="table table-bordered text-center" id="instructor-schedule">
      <thead>
        <tr>
          <th style="width: 10%;"></th>
          <% %w[Lundi Mardi Mercredi Jeudi Vendredi Samedi Dimanche].each do |day_name| %>
            <th><%= day_name %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th class="align-middle">Matin</th>
          <% %w[lundi mardi mercredi jeudi vendredi samedi dimanche].each do |day| %> 
            <td class="agenda-cell" data-day="<%= day %>" data-period="matin">
              <% if @availabilities_by_slot && @availabilities_by_slot["#{day}-matin"] %>
                <% @availabilities_by_slot["#{day}-matin"].each do |availability| %>
                  <span class="instructor-name instructor-<%= availability.user_id %>">
                    <%= availability.user.full_name %>
                  </span>
                <% end %>
              <% end %>
            </td>
          <% end %>
        </tr>
        <tr>
          <th class="align-middle">Après-midi</th>
          <% %w[lundi mardi mercredi jeudi vendredi samedi dimanche].each do |day| %> 
            <td class="agenda-cell" data-day="<%= day %>" data-period="apres-midi">
              <% if @availabilities_by_slot && @availabilities_by_slot["#{day}-apres-midi"] %>
                <% @availabilities_by_slot["#{day}-apres-midi"].each do |availability| %>
                  <span class="instructor-name instructor-<%= availability.user_id %>">
                    <%= availability.user.full_name %>
                  </span>
                <% end %>
              <% end %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="container my-5">
  <%= render 'static_pages/disponibilites_instructeurs' %>
</div>

<style>
  .agenda-cell {
    min-height: 150px;
    vertical-align: top;
    padding: 8px;
  }
  .instructor-name {
    display: block;
    padding: 2px 0;
  }
</style>

<div class="container my-5">
  <h2 class="text-center mb-4">Nos instructeurs</h2>
  <div class="row justify-content-center">
    <%# On récupère tous les fichiers du répertoire app/assets/images/fi %>
    <% files = Dir.glob(Rails.root.join('app', 'assets', 'images', 'fi', '*.{png,jpg,jpeg,gif,PNG,JPG,JPEG,GIF}')).sort %>

    <% if files.present? %>
      <% files.each do |file_path| %>
        <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
          <div class="card h-100">
            <%# les vignettes doivent avoir en filigramme le trigramme de l'instructeur en bas, et en haut sa fonction (FI, FE,...) %>
            <% begin %>
              <%= image_tag "fi/#{File.basename(file_path)}", class: "card-img-top", alt: "Instructeur", style: "object-fit: contain; height: 180px; width: 100%;" %>
            <% rescue StandardError %>
              <div class="d-flex align-items-center justify-content-center bg-light text-muted" style="height: 180px; width: 100%;">Image indisponible</div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-12 text-center">
        <p class="text-muted">Aucune image trouvée dans le dossier <code>app/assets/images/fi/</code>.</p>
      </div>
    <% end %>
  </div>
</div>
