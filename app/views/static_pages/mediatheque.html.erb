<% content_for :title, t('static_pages.mediatheque.title') %>

<div class="container my-5">
  <div class="text-center">
    <h1 class="mb-4"><%= t('static_pages.mediatheque.title') %></h1>
    <p class="lead">
      <%= t('static_pages.mediatheque.lead') %>
    </p>
  </div>
  <hr class="my-5">

  <!-- Section Vidéo -->
  <div class="row mb-5">
    <div class="col-lg-10 mx-auto">
      <h2 class="text-center mb-4"><%= t('static_pages.mediatheque.video_title') %></h2>
      <div class="ratio ratio-16x9">
        <iframe src="https://www.youtube.com/embed/ODmd8NKqIyo" title="Vidéo de présentation" allowfullscreen="" loading="lazy"></iframe>
      </div>
    </div>
  </div>

  <!-- Section Photos -->
  <h2 class="text-center mb-4"><%= t('static_pages.mediatheque.gallery_title') %></h2>
  <div class="row justify-content-center">

    <!-- Photo 1 -->
    <div class="col-md-6 col-lg-5 mb-4">
      <div class="card">
        <%# Photo du Club House %>
        <%= image_tag 'TFFB (10).jpg', class: 'card-img-top', alt: 'Club House' %>
        <div class="card-body">
          <p class="card-text"><%= t('static_pages.mediatheque.clubhouse_text') %></p>
        </div>
      </div>
    </div>

    <!-- Photo 2 -->
    <div class="col-md-6 col-lg-5 mb-4">
      <div class="card">
        <%= image_tag 'TFFB (9).jpg', class: 'card-img-top', alt: 'Hangar' %>
        <div class="card-body">
          <p class="card-text"><%= t('static_pages.mediatheque.hangar_text') %></p>
        </div>
      </div>
    </div>

  </div>

  <!-- Carrousel d'images -->
  <div class="row mb-5">
    <div class="col-lg-8 mx-auto">
        <div id="homeCarousel" class="carousel slide shadow-lg rounded overflow-hidden mb-5" data-bs-ride="carousel" data-bs-keyboard="true" data-bs-carousel-init>
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner text-white">
            <div class="carousel-item active" data-bs-interval="4000">
              <%= image_tag 'TFFB (12).jpg', class: 'd-block w-100', alt: 'manche à air' %>
            </div>
            <div class="carousel-item" data-bs-interval="4000">
              <%= image_tag 'TFFB (2).jpg', class: 'd-block w-100', alt: 'volcan' %>
            </div>
            <div class="carousel-item" data-bs-interval="4000">
              <%= image_tag 'TFFB (13).jpg', class: 'd-block w-100', alt: 'piste' %>
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Préc</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Suiv</span>
          </button>
        </div>
      </div>
    </div>

</div>
