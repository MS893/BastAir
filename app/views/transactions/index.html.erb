<% content_for :title, "Comptabilité - Liste des Transactions" %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Liste des Transactions</h1>
    <% if current_user&.admin? || current_user&.fonction == 'tresorier' %>
      <div>
        <%= link_to "Bilan comptable de l'année", yearly_accounting_report_admin_compta_report_index_path, class: 'btn btn-success' %>
        <%= link_to 'Nouvelle Transaction', new_transaction_path, class: 'btn btn-primary ms-2' %>
      </div>
    <% end %>
  </div>

  <%# --- Cartes de résumé (Solde, Recettes, Dépenses) --- %>
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-muted"><%= @solde_title %></h5>
          <p class="card-text fs-3 fw-bold <%= @solde_total >= 0 ? 'text-success' : 'text-danger' %>">
            <%= number_to_currency(@solde_total, unit: "€", separator: ",", delimiter: " ", format: "%n %u") %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-muted">Total des Recettes</h5>
          <p class="card-text fs-3 fw-bold text-success"><%= number_to_currency(@total_recettes, unit: "€", separator: ",", delimiter: " ", format: "%n %u") %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-muted">Total des Dépenses</h5>
          <p class="card-text fs-3 fw-bold text-danger"><%= number_to_currency(@total_depenses, unit: "€", separator: ",", delimiter: " ", format: "%n %u") %></p>
        </div>
      </div>
    </div>
  </div>

  <%# --- FORMULAIRE DE FILTRE --- %>
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with(url: transactions_path, method: :get, class: "row g-3 align-items-end") do %>
        <div class="col-md-3">
          <%= label_tag :month, "Mois", class: "form-label" %>
          <%= select_tag :month, options_for_select((1..12).map { |m| [l(Date.new(2000, m), format: '%B'), m] }, @selected_month), { include_blank: 'Tous les mois', class: 'form-select' } %>
        </div>
        <div class="col-md-3">
          <%= label_tag :year, "Année", class: "form-label" %>
          <%= select_tag :year, options_for_select((Transaction.minimum(:date_transaction).year..Date.current.year).to_a.reverse, @selected_year), { include_blank: 'Toutes les années', class: 'form-select' } %>
        </div>
        <div class="col-md-3">
          <%= label_tag :source, "Origine", class: "form-label" %>
          <%= select_tag :source, options_for_select(Transaction::ALLOWED_TSN.values, @selected_source), { include_blank: 'Toutes les origines', class: 'form-select' } %>
        </div>
        <div class="col-md-3">
          <%= submit_tag "Filtrer", class: "btn btn-info" %>
          <%= link_to "Réinitialiser", transactions_path, class: "btn btn-outline-primary ms-2" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Description</th>
            <th scope="col" class="text-end">Montant</th>
            <th scope="col">Type</th>
            <th scope="col">Origine</th>
            <th scope="col">Adhérent</th>
            <th scope="col" class="text-center">Statut</th>
            <th scope="col" class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody id="transactions">
          <%# Chaque transaction sera rendue via le partiel _transaction.html.erb %>
          <%# L'ID `transactions` permet à Turbo de cibler le conteneur pour les ajouts/suppressions futures %>
          <%= render @transactions %>
        </tbody>
      </table>
    </div>
  </div>

  <%# Liens de pagination Kaminari %>
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @transactions %>
  </div>
</div>
