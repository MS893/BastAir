<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-header">
          <h2 class="card-title mb-0">Modifier le commentaire</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: [@event, @comment]) do |form| %>
            <div class="mb-3">
              <%= form.label :content, "Votre commentaire", class: "form-label" %>
              <%= form.text_area :content, class: "form-control", rows: 5 %>
            </div>

            <div class="d-flex gap-2">
              <%= form.submit "Enregistrer", class: "btn btn-primary" %>
              <%= link_to "Annuler", event_path(@event), class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
