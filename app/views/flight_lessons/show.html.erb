<% content_for :title, @lesson.title %>

<div class="container-fluid my-5">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="d-flex align-items-center mb-4">
        <%= link_to flight_lessons_path, class: "btn btn-outline-primary me-3" do %>
          <i class="bi bi-arrow-left"></i> Retour à la liste
        <% end %>
        <h1 class="h3 mb-0"><%= @lesson.title %></h1>
      </div>

      <% if @pdf_available %>
        <embed src="<%= pdf_flight_lesson_path(id: @lesson.id) %>" type="application/pdf" width="100%" height="800px" />
      <% elsif @lesson.respond_to?(:document) && @lesson.document.attached? %>
        <embed src="<%= url_for(@lesson.document) %>" type="application/pdf" width="100%" height="800px" />
      <% else %>
        <p class="alert alert-warning">Aucun document n'est disponible pour cette leçon.</p>
      <% end %>

    </div>
  </div>
</div>
